<h1><%= @idea.title %></h1>

<p><%= @idea.description %></p>

<p><%= @idea.created_at %></p>
<p>Created By <%= @idea.user.first_name + ' ' + @idea.user.last_name %></p>


<% if can? :edit, @idea %>
  <%= link_to  "Edit", edit_idea_path(@idea) %>
<% end %>
<% if can? :destroy, @idea %>
<%= link_to "Delete", idea_path(@idea), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>